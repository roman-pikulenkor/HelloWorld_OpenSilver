<sdk:Page
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    x:Class="HelloWorld.DockPanelTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HelloWorld">
    
    <DockPanel>
        <Border DockPanel.Dock="Left" Width="100" Background="#FF03A9F4" CornerRadius="2" Margin="2"/>
        <Border DockPanel.Dock="Top" Height="100" Background="#FFFF5177" CornerRadius="2" Margin="2"/>
        <Border DockPanel.Dock="Right" Width="100" Background="#FF12C700" CornerRadius="2" Margin="2"/>
        <Border DockPanel.Dock="Bottom" Height="100" Background="#FFFFB300" CornerRadius="2" Margin="2"/>
        <Border DockPanel.Dock="Left" Width="120" Background="#FFE040FB" CornerRadius="2" Margin="2"/>
        <Button Background="#FF616140" Margin="15" Content="DockPanel"/>
        <Button Background="#FF616161" Margin="15" Content="Calculate" Click="CalculateButton_Click"/>
    </DockPanel>
</sdk:Page>
