<sdk:Page
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    x:Class="HelloWorld.CanvasTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HelloWorld" CustomLayout="True">

    <Canvas Background="#eeeeee" HorizontalAlignment="Center" Width="500">
        <Button Canvas.Left="200" Canvas.Top="50" Canvas.ZIndex="6"  Content="Calculate" Click="CalculateButton_Click"/>
