    <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center">

        <!-- Label -->
        <TextBlock Text="Checked"
             Foreground="#242424"
             FontWeight="SemiBold"
             FontSize="16" />

        <!-- Example 1, Checked -->
        <CheckBox Content="CheckBox 1"
	    IsChecked="True" />

        <!-- Label -->
        <TextBlock Text="Unchecked"
             Foreground="#242424"
             FontWeight="SemiBold"
             FontSize="16"
             Margin="0,20,0,0" />

        <!-- Example 2, Unchecked -->
        <CheckBox Content="CheckBox 2"
	    IsChecked="False"/>

        <!-- Label -->
        <TextBlock Text="Data Context"
             Foreground="#242424"
             FontWeight="SemiBold"
             FontSize="16"
             Margin="0,20,0,0" />

        <!-- Example 3, Unchecked -->
        <CheckBox Content="CheckBox 3"
	    IsChecked="{Binding isSubscribedToNewsLetter}"/>

        <!-- Label -->
        <TextBlock Text="Disabled and Unchecked"
             Foreground="#242424"
             FontWeight="SemiBold"
             FontSize="16"
             Margin="0,20,0,0" />

        <!-- Example 4, Checked + Disabled -->
        <CheckBox Content="CheckBox 4"
	    IsChecked="True"
	    IsEnabled="False" />

        <!-- Label -->
        <TextBlock Text="Disabled and Unchecked"
             Foreground="#242424"
             FontWeight="SemiBold"
             FontSize="16"
             Margin="0,20,0,0" />

        <!-- Example 5, Unchecked + Disabled -->
        <CheckBox Content="CheckBox 5"
	    IsChecked="False"
	    IsEnabled="False" />

        <Button Content="Calculate" Click="Button_Click"/>
    </StackPanel>
</sdk:Page>